import math
x1,y1 = map(float,input("첫번째 점을 60분법 각으로 입력").split())
x2,y2 = map(float,input("두번째 점을 60분법 각으로 입력").split())
x1 = math.radians(x1)
x2 = math.radians(x2)
y1 = math.radians(y1)
y2 = math.radians(y2)

r = 6370.01
distance =r*math.acos(math.sin(x1)*math.sin(x2) \
          + math.cos(x1)*math.cos(x2)*math.cos(y1-y2))
print(distance)
